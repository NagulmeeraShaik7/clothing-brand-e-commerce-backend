{
  "info": {
    "name": "Clothing E-commerce Backend",
    "_postman_id": "clothing-ecom-backend-collection",
    "description": "Postman collection for the Clothing E-commerce backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "jwtToken", "value": "" },
    { "key": "cartToken", "value": "" }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/health", "host": ["{{baseUrl}}"], "path": ["health"] }
      }
    },
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/auth/register", "host": ["{{baseUrl}}"], "path": ["api","auth","register"] }
      }
    },
    {
      "name": "Auth - Login (save token)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "if (res && res.data && res.data.token) {",
              "  pm.environment.set('jwtToken', res.data.token);",
              "  console.log('jwtToken saved');",
              "} else {",
              "  console.log('No token in response');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Products - List",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/api/products", "host": ["{{baseUrl}}"], "path": ["api","products"] }
      }
    },
    {
      "name": "Products - Get By ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/api/products/:id", "host": ["{{baseUrl}}"], "path": ["api","products",":id"] }
      }
    },
    {
      "name": "Cart - Get Cart",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
          { "key": "x-cart-token", "value": "{{cartToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/cart", "host": ["{{baseUrl}}"], "path": ["api","cart"] }
      }
    },
    {
      "name": "Cart - Add Item (save cartToken)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
          { "key": "x-cart-token", "value": "{{cartToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": \"<REPLACE_PRODUCT_ID>\",\n  \"size\": \"M\",\n  \"quantity\": 1\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/cart/add", "host": ["{{baseUrl}}"], "path": ["api","cart","add"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const r = pm.response.json();",
              "if (r && r.data && r.data.cartToken) {",
              "  pm.environment.set('cartToken', r.data.cartToken);",
              "  console.log('cartToken saved');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Cart - Update Item",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
          { "key": "x-cart-token", "value": "{{cartToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"itemId\": \"<REPLACE_ITEM_ID>\",\n  \"quantity\": 2\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/cart/update", "host": ["{{baseUrl}}"], "path": ["api","cart","update"] }
      }
    },
    {
      "name": "Cart - Remove Item",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
          { "key": "x-cart-token", "value": "{{cartToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"itemId\": \"<REPLACE_ITEM_ID>\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/cart/remove", "host": ["{{baseUrl}}"], "path": ["api","cart","remove"] }
      }
    },
    {
      "name": "Cart - Clear",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
          { "key": "x-cart-token", "value": "{{cartToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/cart/clear", "host": ["{{baseUrl}}"], "path": ["api","cart","clear"] }
      }
    },
    {
      "name": "Orders - Checkout",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"shipping\": {\n    \"address\": \"123 Main St\"\n  }\n}" },
        "url": { "raw": "{{baseUrl}}/api/orders/checkout", "host": ["{{baseUrl}}"], "path": ["api","orders","checkout"] }
      }
    },
    {
      "name": "Orders - List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/orders", "host": ["{{baseUrl}}"], "path": ["api","orders"] }
      }
    }
  ]
}
